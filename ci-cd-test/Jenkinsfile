pipeline {
    agent any

    stages {

        stage('Install Dependencies') {
			steps {
				dir('ci-cd-test') {
					sh 'conan profile detect --force'
					sh 'conan install . --output-folder=build --build=missing'
				}
			}
		}

        stage('Configure') {
            steps {
				dir('ci-cd-test') {
					sh 'cmake -S . -B build -DCMAKE_TOOLCHAIN_FILE=build/generators/conan_toolchain.cmake'
				}
			}
        }

        stage('Build') {
            steps {
				dir('ci-cd-test') {
					sh 'cmake --build build'
				}
			}
        }

        stage('Test') {
            steps {
				dir('ci-cd-test') {
					sh 'ctest --test-dir build'
				}
			}
        }
    }
}