pipeline {
    agent any

    stages {

        stage('Install Dependencies') {
			steps {
				dir('ci-cd-test') {
					sh 'conan profile detect --force'
					sh 'conan install . --output-folder=build --build=missing'
				}
			}
		}

		stage('Configure') {
			steps {
				dir('ci-cd-test') {
					sh 'cmake --preset conan-release'
				}
			}
		}

		stage('Build') {
			steps {
				dir('ci-cd-test') {
					sh 'cmake --build --preset conan-release'
				}
			}
		}

        stage('Test') {
            steps {
				dir('ci-cd-test') {
					sh 'ctest --test-dir build'
				}
			}
        }
    }
}